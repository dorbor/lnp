<%- include('hub/top'); -%>

<!-- Navbar -->
<%- include('hub/nav'); -%>

<!-- left side bar component  -->
<%- include('hub/sidebar'); -%>

<div class="container">
  <div class="row my-2">
    <div class="col-lg-8 order-lg-2">
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <a
            href=""
            data-target="#edit"
            data-toggle="tab"
            class="nav-link active"
            >Add Officer</a
          >
        </li>
      </ul>
      <div class="tab-content py-4">
        <div class="tab-pane active" id="edit">
          <form
            action="/admin/addOfficer"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="form-group row">
              <label class="col-lg-3 col-form-label form-control-label"
                >First name</label
              >
              <div class="col-lg-9">
                <input
                  class="form-control"
                  type="text"
                  placeholder="Hannah"
                  name="firstName"
                />
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-3 col-form-label form-control-label"
                >Middle name</label
              >
              <div class="col-lg-9">
                <input
                  class="form-control"
                  type="text"
                  placeholder="Faith"
                  name="middleName"
                />
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-3 col-form-label form-control-label"
                >Last name</label
              >
              <div class="col-lg-9">
                <input
                  class="form-control"
                  type="text"
                  placeholder="Richards"
                  name="lastName"
                />
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-3 col-form-label form-control-label"
                >Email</label
              >
              <div class="col-lg-9">
                <input
                  class="form-control"
                  type="email"
                  placeholder="hannahrichards@gmail.com"
                  name="email"
                />
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-3 col-form-label form-control-label"
                >Phone Number</label
              >
              <div class="col-lg-9">
                <input
                  class="form-control"
                  type="number"
                  placeholder="0770777777"
                  name="phone"
                />
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-3 col-form-label form-control-label"
                >Phone Number 2</label
              >
              <div class="col-lg-9">
                <input
                  class="form-control"
                  type="number"
                  placeholder="0886777777"
                  name="phone1"
                />
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-3 col-form-label form-control-label">
                Gender</label
              >
              <div class="col-lg-9">
                <select name="gender" id="" class="form-control">
                  <option value="">Select Gender</option>
                  <option value="male">Male</option>
                  <option value="female">Female</option>
                </select>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-3 col-form-label form-control-label"
                >Officer ID#</label
              >
              <div class="col-lg-9">
                <input
                  class="form-control"
                  type="number"
                  name="id"
                  placeholder="12345"
                  required
                />
										<input  type="hidden" value="<%= user.fullName %>" name="loginUser">
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-3 col-form-label form-control-label"
                >Officer Photo</label
              >
              <div class="col-lg-9">
                <input type="file" class="form-control" name="officerImage" />
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-3 col-form-label form-control-label"
                > Educational Level</label
              >
              <div class="col-lg-9">
                <select
                  id="user_time_zone"
                  class="form-control"
                  size="0"
                  class="form-control"
                  name="education"
                >
                  <option value="">select Education</option>
                  <option value="High School Diploma">High School Diploma </option>
                  <option value="Associate Degree">Associate Degree</option>
                  <option value="College Student">College Student</option>
                  <option value="University Degree<">University Degree</option>
                  <option value="Law Candidate<">Law Candidate</option>
                  <option value="Law Degree<">Law Degree</option>
                  <option value="Master Candidate<">Master Candidate</option>
                  <option value="Master Degree<">Master Degree</option>
                  <option value="Phd Candidate<">Phd Candidate</option>
                  <option value="Phd Degree<">Phd Degree</option>
                </select>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-3 col-form-label form-control-label"
                >County of Deployment</label
              >
              <div class="col-lg-9">
                <select
                  id="user_time_zone"
                  class="form-control"
                  size="0"
                  class="form-control"
                  name="assignment"
                >
                  <option value="">select County</option>
                  <option value="Bomi">Bomi</option>
                  <option value="Bong">Bong</option>
                  <option value="Gbarpolu">Gbarpolu</option>
                  <option value="Grand Bassa">Grand Bassa</option>
                  <option value="Grand Cape Mount">Grand Cape Mount</option>
                  <option value="Grand Gedeh">Grand Gedeh</option>
                  <option value="Grand Kru">Grand Kru</option>
                  <option value="Lofa">Lofa</option>
                  <option value="Margibi">Margibi</option>
                  <option value="Maryland">Maryland</option>
                  <option value="Montserrado">Montserrado</option>
                  <option value="Nimba">Nimba</option>
                  <option value="Rivercess">Rivercess</option>
                  <option value="River Gee">River Gee</option>
                  <option value="Sinoe">Sinoe</option>
                </select>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-3 col-form-label form-control-label"
                >Department</label
              >
              <div class="col-lg-9">
                <select
                  id="user_time_zone"
                  class="form-control"
                  size="0"
                  class="form-control"
                  name="department"
                >
                  <option value="">select Department</option>
                  <option value="Administration Command">Administration Command</option>
                  <option value="Operation Command">Operation Command</option>
                  <option value="Training & Development Command">Training & Development Command</option>
                  <option value="CSD/CID/Interpool Affairs Command">CSD/CID/Interpool Affairs Command</option>
             
                </select>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-3 col-form-label form-control-label"
                >Office</label
              >
              <div class="col-lg-9">
                <input
                  class="form-control"
                  type="text"
                  name="office"
                  placeholder="Technical Affairs"
                />
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-3 col-form-label form-control-label"
                >Rank</label
              >
              <div class="col-lg-9">
                <select name="position" class="form-control">
                  <option value="">Select Position</option>
                  <% positions.forEach(pos => { %>
                  <option value="<%= pos.title %>"><%= pos.title %></option>
                  <% }); %>
                </select>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-3 col-form-label form-control-label"
                >Division/Unit</label
              >
              <div class="col-lg-9">
                <select name="division" id="" class="form-control">
                  <option value="#">Select Unit</option>
                  <% divisions.forEach(div => { %>
                  <option value="<%= div.title %>"><%= div.title %></option>
                  <% }); %>
                </select>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-3 col-form-label form-control-label"
                >Section</label
              >
              <div class="col-lg-9">
                <input
                  class="form-control"
                  type="text"
                  name="section"
                  placeholder="Junior Reconciliation Officer"
                />
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-3 col-form-label form-control-label"
                >Status</label
              >
              <div class="col-lg-9">
                <select
                  id="user_time_zone"
                  class="form-control"
                  size="0"
                  class="form-control"
                  name="status">
                  <option value="">select Status</option>
                  <option value="active">Active</option>
                  <option value="Resigned">Resigned</option>
                  <option value="Dismissed">Dismissed</option>
                  <option value="Deceased">Deceased</option>
                  <option value="Pension">Pension</option>
                  <option value="Deserted">Deserted</option>
                  <option value="On Leave">On Leave</option>
                  <option value="Secondment">Secondment</option>
                  <option value="Interdicted">Interdicted</option>
                  <option value="Suspended Definitely">Suspended Definitely</option>
                  <option value="Suspended Indefinitely">Suspended Indefinitely</option>
                </select>
              </div>
            </div>

            <div class="form-group row">
              <label class="col-lg-3 col-form-label form-control-label"></label>
              <div class="col-lg-9">
                <!-- <input type="reset" class="btn btn-secondary" value="Cancel"> -->
                <input
                  type="submit"
                  class="btn btn-primary"
                  value="Add Officer"
                />
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="col-lg-4 order-lg-1 text-center">
      <!-- <img src="//placehold.it/150" class="mx-auto img-fluid img-circle d-block" alt="avatar">
		            <h6 class="mt-2">Upload a different photo</h6>
		            <label class="custom-file">
		                <input type="file" id="file" class="custom-file-input">
		                <span class="custom-file-control">Choose file</span>
		            </label> -->
    </div>
  </div>
</div>

<!-- Bottom component -->
<%- include('hub/bottom'); -%>

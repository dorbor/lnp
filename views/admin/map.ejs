<script>
  function initMap() {
    // Map options
      var myLocation = {zoom:18, center: {lat:<%= comment.latitude %>,lng:<%= comment.longitude %>}}
      
      // New map
      var map = new google.maps.Map(document.getElementById('map'), myLocation);


      
      //Add marker
      var marker = new google.maps.Marker({
        position:{
          lat: <%= comment.latitude %>,
          lng:<%= comment.longitude %>
        },
        map:map,
        icon:'https://developers.google.com/maps/documentation/javascript/examples/full/images/beachflag.png'
      });

  }
</script>
<script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyClE7RtHQ-zWz_qNaWZ8stMI7cpDAahyM8&callback=initMap">
